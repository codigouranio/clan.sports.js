{
  "name": "services",
  "private": true,
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codigouranio/clan.sports.git"
  },
  "keywords": [
    "social-network",
    "sports",
    "business-solutions"
  ],
  "author": "codigouranio",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/codigouranio/clan.sports/issues"
  },
  "homepage": "https://github.com/codigouranio/clan.sports#readme",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "node -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "typeorm:db": "typeorm-ts-node-esm -d ./src/db/db.typeorm.config.ts",
    "typeorm": "typeorm-ts-node-esm -d ./src/db/db.typeorm.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "9.0.0",
    "@nestjs/config": "2.2.0",
    "@nestjs/core": "9.0.0",
    "@nestjs/jwt": "^10.0.1",
    "@nestjs/passport": "^9.0.0",
    "@nestjs/platform-express": "9.0.0",
    "@nestjs/typeorm": "9.0.1",
    "@types/bindings": "1.5.1",
    "better-sqlite3": "7.6.2",
    "class-transformer": "^0.5.1",
    "class-validator": "0.13.2",
    "dotenv": "16.0.2",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "0.1.13",
    "rimraf": "3.0.2",
    "rxjs": "7.2.0",
    "sqlite3": "5.1.1",
    "typeorm": "0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "9.0.0",
    "@nestjs/schematics": "9.0.0",
    "@nestjs/testing": "9.0.0",
    "@types/express": "4.17.13",
    "@types/jest": "28.1.4",
    "@types/passport-jwt": "^3.0.8",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.47.0",
    "@typescript-eslint/parser": "5.47.0",
    "source-map-support": "0.5.20",
    "supertest": "6.1.3",
    "ts-jest": "28.0.5",
    "ts-loader": "9.2.3",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
